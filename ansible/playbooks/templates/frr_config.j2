! FRR Configuration for {{ inventory_hostname }}
! Generated by Ansible from NetBox data
!
hostname {{ inventory_hostname }}

! Interfaces  
interface lo
 ip address {{ loopback_ip | default('1.1.1.1/32') }}
!

! OSPF Configuration
router ospf
 ospf router-id {{ ospf_router_id | default('1.1.1.1') }}
 network 0.0.0.0 255.255.255.255 area {{ ospf_area | default('0') }}
 passive-interface lo
!

! BGP Configuration
router bgp {{ bgp_asn | default('65001') }}
 bgp router-id {{ ospf_router_id | default('1.1.1.1') }}
 bgp log-neighbor-changes
!

! Access Lists
access-list 1 permit any
!
line vty
!
